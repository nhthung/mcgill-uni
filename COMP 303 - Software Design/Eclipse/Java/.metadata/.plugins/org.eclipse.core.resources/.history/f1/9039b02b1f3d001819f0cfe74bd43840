package JavaCool303;

import java.awt.Color;

import java.util.Random;
import javax.swing.border.Border;
import JavaCool303.BubbleBorder;
import JavaCool303.Cool303Theme;

public class PastelTheme extends Cool303Theme {
	public PastelTheme() {
		backgroundColor[0] = 218; backgroundColor[1] = 241; backgroundColor[2] = 255;
		borderColor[0] = 255; borderColor[1] = 255; borderColor[2] = 255;
		buttonColor[0] = 255; buttonColor[1] = 156; buttonColor[2] = 238;
	}
	
	public Border getBorder() {
		return new BubbleBorder(new Color(borderColor[0], borderColor[1], borderColor[2]), 6, 15);
	}
}