package JavaCool303;

import java.awt.Color;
import java.awt.Component;
import java.util.ArrayList;

import javax.swing.border.Border;

public class Cool303Root extends Cool303Panel {
	private static final long serialVersionUID = 1L;
	
	Cool303Theme theme;
	Color color;
	Color bgColor1;
	Color bgColor2;
	Border border;
	
	public Cool303Root(Cool303Theme theme) {
		this.theme = theme;
		color = theme.getColor();
		bgColor1 = theme.getBackgroundColor();
		bgColor2 = theme.getBackgroundColor();
		border = theme.getBorder();
	}
	
	// Si on change le theme -> recolorer
	public Component add(Component comp) {
		comp.setBackground(bgColor1);
		
		if(comp instanceof Cool303Container) {
			Cool303Container container = (Cool303Container)comp;
			ArrayList<Component> children = container.getChildren();
			for (int i = 0; i < children.size(); i++) {
				children.get(i).setBackground(bgColor2);
				children.get(i).setBorder(border);
				System.out.println(children.get(i).getClass().getName());
			}
		}
		
		return super.add(comp);
	}
	
	public Component add(String name, Component comp) {
		comp.setBackground(bgColor);
		return super.add(name, comp);
	}
	
	public Component add(Component comp, int index) {
		comp.setBackground(bgColor);
		return super.add(comp, index);
	}
	
	Cool303Theme getTheme() {
		return theme;
	}
}