	public SummerTheme() {
		backgroundColor[0] = 255; backgroundColor[1] = 224; backgroundColor[2] = 181;
		borderColor[0] = 255; borderColor[1] = 255; borderColor[2] = 255;
		buttonColor[0] = 67; buttonColor[1] = 146; buttonColor[2] = 241;
	}
	
	/*
