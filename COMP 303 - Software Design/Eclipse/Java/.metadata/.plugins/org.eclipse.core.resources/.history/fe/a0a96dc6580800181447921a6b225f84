import java.util.ArrayList;

public class Customer {
	private String name;
	private int customerNumber;
	private double discountPercentage;
	private static int customerCount = 0;
	private ArrayList accounts = new ArrayList<Account>();
	
	Customer(String name, double discountPercentage) {		
		this.name = name;
		this.discountPercentage = discountPercentage;
		
		customerNumber = customerCount;
		
		customerCount++;
	}
	
	void addAccount(char accountSwitch, double amount) {
		switch (accountSwitch) {
		case 'a': accounts.add(new Chequing(amount)); break;
		case 'b': accounts.add(new Savings(amount)); break;
		}
	}
	
	String getName() {
		return name;
	}
	
	int getCustomerNumber() {
		return customerNumber;
	}
	
	String getAccountList() {
		String accountList = "";
		
		for( int i = 0; i < accounts.size(); i++ )
			 accountList += (i + 1) + ". " + accounts.get(i) + "\n";
		
		return accountList;
	}
	
	String getSpecificBalance(int account) {
		return ((Chequing) accounts.get(account)).info();
	}
	
	int getAccountCount() {
		return accounts.size();
	}
	
	public String toString() {
		return "Customer: " + name + ". Customer number: " + customerNumber;
	}
}
