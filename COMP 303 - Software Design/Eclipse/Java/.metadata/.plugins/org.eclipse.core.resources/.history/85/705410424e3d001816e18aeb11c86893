package JavaCool303;

import java.awt.Color;
import javax.swing.border.Border;
import JavaCool303.Cool303Theme;
import JavaCool303.BubbleBorder;
// define different colors

public class SummerTheme extends Cool303 {
	public SummerTheme() {
		backgroundColor[0] = 255; backgroundColor[1] = 224; backgroundColor[2] = 181;
		borderColor[0] = 255; borderColor[1] = 255; borderColor[2] = 255;
		buttonColor[0] = 67; buttonColor[1] = 146; buttonColor[2] = 241;
		
		borderThickness = 4;
		cornerRadius = 3;
	}

	public Border getBorder() {
		return new BubbleBorder(new Color(borderColor[0], borderColor[1], borderColor[2]), borderThickness, cornerRadius);
	}
}
