public class PrintArray{
  private String s = "";
  public static String printArray(int[] arr, int start){
    if(start == arr.length - 1){
      s += arr[start];
      return s;
    }
    else{
      s += arr[start++] + ", ";
      return printArray(arr, start);
    }
  }
  
  public static void main(String[] args){
    int[] arr = {1};
    System.out.println(printArray(arr));
  }
}